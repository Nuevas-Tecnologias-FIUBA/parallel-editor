<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="ParallelEditor-Eclipse.actionSet">
         <menu label="Sample &amp;Menu"
               id="sampleMenu">
            <separator name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="ar.noxit.paralleleditor.eclipse.actions.SampleAction"
               tooltip="Hello, Eclipse world"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="ar.noxit.paralleleditor.eclipse.actions.SampleAction">
         </action>
      </actionSet>
   </extension>

   <extension point="org.eclipse.ui.menus">
      <menuContribution locationURI="popup:#CompilationUnitEditorContext">
         <dynamic class="ar.noxit.paralleleditor.eclipse.menu.TextEditorContextualMenu" id="menu"/>
      </menuContribution>
   </extension>

   <extension point="org.eclipse.ui.views">
      <view
            category="ar.noxit.paralleleditor.eclipse"
            class="ar.noxit.paralleleditor.eclipse.views.ConnectionView"
            icon="icons/sample.gif"
            id="ParallelEditor-Eclipse.connectionView"
            name="PE Connection view"
            restorable="true">
      </view>
   </extension>
</plugin>
